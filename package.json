{
  "scripts": {
    "start": "npm-run-all --parallel frontend start-server",
    "build": "npm-run-all --parallel frontend:build start-server",
    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npx run build",
    "start-server": "cd backend && npx nodemon server.js"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "vite": "^5.2.11"
  }
}
